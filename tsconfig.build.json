{
  "compilerOptions": {
    /* Base Options: */
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "noEmit": true
  },
  "include": ["src"]
}
